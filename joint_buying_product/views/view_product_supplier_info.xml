<?xml version="1.0" encoding="UTF-8"?>

<odoo>


    <record id="product_supplierinfo_form_view_inherit" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='purchase']" position="attributes">
                <attribute name="attrs">{'invisible': [('is_joint_buying', '=', True)]}</attribute>
            </xpath>

            <xpath expr="//page[@name='purchase']" position="replace">
                <page string="Purchase" name="purchase">
                    <field name="seller_ids">
                        <tree editable="botttom">
                            <field name="name" context="{'joint_buying': 1}" domain="[('is_joint_buying_supplier', '=', True)]" />
                            <field name="product_id" context="{'joint_buying': 1}" />                    
                            <field name="min_qty" />
                            <field name="price" />
                            <field name="date_start" />
                            <field name="date_end" />
                        </tree> 
                    </field>
                </page>
            </xpath>

        </field>
    </record>


</odoo>

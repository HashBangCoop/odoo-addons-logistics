<?xml version="1.0" encoding="UTF-8"?>

<odoo>


    <record id="product_product_for_joint_buying_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
        <field name="arch" type="xml">

            <group name="vendors" position="attributes">
                <attribute name="attrs">{"invisible": ["|",("product_variant_count","&gt;",1),("is_joint_buying", "=", True)]}</attribute>
            </group>
            <group name="variant_vendors" position="attributes">
                <attribute name="attrs">{"invisible": ["|",("product_variant_count","&lt;=",1),("is_joint_buying", "=", True)]}</attribute>
            </group>

            <group name="variant_vendors" position="after">
                <group string="Vendors" name="joint_buying_vendors" attrs="{'invisible': ['|',('product_variant_count','&gt;',1),('is_joint_buying', '=', False)]}">
                    <field name="joint_buying_seller_ids" context="{'default_product_tmpl_id':context.get('product_tmpl_id',active_id), 'product_template_invisible_variant': True}" nolabel="1">
                        <tree editable="botttom">
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="name" context="{'joint_buying': context.get('joint_buying', 0)}" />
                            <field name="product_id" context="{'joint_buying': context.get('joint_buying', 0)}" domain="[('product_tmpl_id', '=', product_tmpl_id)]"/>
                            <field name="min_qty" />
                            <field name="price" />
                            <field name="date_start" />
                            <field name="date_end" />
                        </tree>
                    </field>
                </group>
                <group string="Vendors" name="joint_buying_variant_vendors" attrs="{'invisible': ['|',('product_variant_count','&lt;=',1),('is_joint_buying', '=', False)]}">
                    <field name="joint_buying_variant_seller_ids" context="{'default_product_tmpl_id': context.get('product_tmpl_id', active_id)}" nolabel="1">
                        <tree editable="botttom">
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="name" context="{'joint_buying': context.get('joint_buying', 0)}" />
                            <field name="product_id" context="{'joint_buying': context.get('joint_buying', 0)}" domain="[('product_tmpl_id', '=', product_tmpl_id)]"/>
                            <field name="min_qty" />
                            <field name="price" />
                            <field name="date_start" />
                            <field name="date_end" />
                        </tree>
                    </field>
                </group>
            </group>

        </field>
    </record>


</odoo>
